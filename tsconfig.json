{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "lib",
        "sourceMap": false,
        "noEmit": true,

        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",

        "declaration": true,
        "declarationMap": true,

        "noImplicitThis": true,
        "jsx": "preserve",
        "importHelpers": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "types": ["webpack-env"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"],
    "exclude": ["node_modules"]
}
